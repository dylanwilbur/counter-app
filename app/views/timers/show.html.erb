<head><meta name="turbolinks-cache-control" content="no-preview"></head>

<div class="container show-body">
  <div id='counter'>
    <h2><clock><%= @timer.elapsed_time %></clock></h2>
    
    <script>
      var myVar = setInterval(myTimer, 1000);
      var time = <%= @timer.elapsed_time %>
      function myTimer() {
        document.querySelector("clock").innerHTML = time;
        time++;
      }
    </script>
  </div>
  
  <hr>
  
  <div class="container">
    <div class="box">
      <div class="row row-one">
        <div class="col-md-12 imageholder">
          <% if @story.img.present? %>
            <img class="img-fluid img-thumbnail visual img-responsive pull-left" src=<%= @story.img %>></img>
          <% end %>
          
          <h1><%= @story.name %></h1></h1> 
          
          <p class="lead"><%= @story.content %></p>
        </div>
      </div>
    </div>
  </div>
  
  <div style="text-align:center;">
    <%= button_to 'Next Story', root_path, method: :get, class: "btn btn-primary" %>
  </div>
</div>